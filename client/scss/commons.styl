.bar-default
  background $white
  border-bottom 1px solid $off-white

.bar > .title
  font-family $font-family-accent
  color $gray
  font-size .9em

.bar-subheader
  height 35px

.sub-header
ul
  text-align center

.bar-subheader ul > li > a
  display inline-block
  font-family $font-family-accent
  text-transform uppercase
  font-size .7em
  color $aluminium
  margin 3px 15px

.bar-subheader .active
  color $gray
  border-bottom 1px solid $gray
  padding-bottom 5px

.scroll-refresher .ionic-refresher-content .text-pulling
  color $gray
  font-size 10px
